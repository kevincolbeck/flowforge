# FlowForge Environment Variables

# Database (Railway auto-provides DATABASE_URL)
DATABASE_URL=postgresql://user:password@localhost:5432/flowforge

# Redis (Railway auto-provides REDIS_URL)
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-this-in-production
API_KEY_SALT=your-api-key-salt-change-this

# API Keys (Optional - for LLM features)
ANTHROPIC_API_KEY=your-anthropic-key
OPENAI_API_KEY=your-openai-key

# App Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# CORS (comma-separated origins)
ALLOWED_ORIGINS=https://yourapp.com,https://www.yourapp.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
